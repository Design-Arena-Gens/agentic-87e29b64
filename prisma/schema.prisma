generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String
  role         String   @default("STUDENT")
  createdAt    DateTime @default(now())
  courses      Course[] @relation("TutorCourses")
  enrollments  Enrollment[]
}

model Course {
  id          String      @id @default(cuid())
  title       String
  description String
  tutor       User        @relation("TutorCourses", fields: [tutorId], references: [id])
  tutorId     String
  createdAt   DateTime    @default(now())
  sessions    Session[]
  enrollments Enrollment[]
}

model Enrollment {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  course    Course   @relation(fields: [courseId], references: [id])
  courseId  String
  createdAt DateTime @default(now())

  @@unique([userId, courseId])
}

model Session {
  id          String         @id @default(cuid())
  course      Course         @relation(fields: [courseId], references: [id])
  courseId    String
  title       String
  content     String
  scheduledAt DateTime
  createdAt   DateTime       @default(now())
  quiz        QuizQuestion[]
}

model QuizQuestion {
  id          String   @id @default(cuid())
  session     Session  @relation(fields: [sessionId], references: [id])
  sessionId   String
  question    String
  options     String   // JSON string array
  answer      String
  explanation String?
}

model AIConfig {
  id        Int      @id @default(1)
  apiBase   String
  apiKey    String
  modelName String
  updatedAt DateTime @updatedAt
}
